<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<parameters>

	<!--PARAMÈTRES SCÉNARISTIQUES POUR LES SIMULATIONS AVEC ARTISCALES -->

	<!-- Nom du scénario -->
	<param key="nom" value="intenseRegulatedSpread" />
	<param key="code" value="intReg" />

	<!-- Dossiers et fichiers nécessaires à la simulation -->
	<!-- Emplacement de la simulation (données d'entrée, résultats intermédiaires et finaux) -->
	<param key="rootFile" value="/home/mcolomb/informatique/ArtiScales2/" />

		
	<!-- PARAMETRES DU MODULE MUP-CITY -->

		<!-- Densité du développement résidentiel -->

		<!-- Intensité du développement résidentiel. Les valeurs doivent être comprises 
			entre 3 et 7 -->
		<param key="N" value="6" />

		<!-- Si "false", développement résidentiel globalement uniforme -->
		<!-- Si "true", développement résidentiel très contrasté -->
		<param key="strict" value="false" />

		<!-- Paramètre concernant la pondération des règles d'aménagement -->
		<!-- Ces pondérations sont calculées au moyens de matrice d'aide à la décision 
			(Analytic Hierarchical Process, voir (Saaty, 1977) -->

			<!-- Nom générique pour le jeu de pondération -->
			<param key="ahpName" value="service" />
			<!-- Pondération de la règle d'accessibilité aux espaces naturels et de 
				loisirs de fréquentation potentielle mensuelle -->
			<param key="ahp8" value="0.083" />
			<!-- Pondération de la règle d'accessibilité aux espaces naturels et de 
				loisirs de fréquentation potentielle hebdomadaire -->
			<param key="ahp7" value="0.083" />
			<!-- Pondération de la règle d'accessibilité aux espaces naturels et de 
				loisirs de fréquentation potentielle quotidienne -->
			<param key="ahp6" value="0.083" />
			<!-- Pondération de la règle d'accessibilité au réseau de transport en commun -->
			<param key="ahp5" value="0.04" />
			<!-- Pondération de la règle d'accessibilité aux commerces et services de 
				fréquentation mensuelle -->
			<param key="ahp4" value="0.218" />
			<!-- Pondération de la règle d'accessibilité aux commerces et services de 
				fréquentation hebdomadaire -->
			<param key="ahp3" value="0.218" />
			<!-- Pondération de la règle d'accessibilité aux commerces et services de 
				fréquentation quotidienne -->
			<param key="ahp2" value="0.218" />
			<!-- Pondération de la règle de proximité au réseau routier existant -->
			<param key="ahp1" value="0.03" />
			<!-- Pondération de la règle morphologique -->
			<param key="ahp0" value="0.0027" />

		<!-- Méthode d'agrégation des valeurs d'évaluations -->
		<!-- Si "true", utilisation des moyennes pondérées -->
		<!-- Si "false", utilisation de l'agrégation de Yager (Yager, 1978). Cette 
			méthode est beaucoup plus sévère et moins de cellules sont calculées -->
		<param key="mean" value="true" />

	<!-- PARAMÈTRES DU MODULE PARCEL MANAGER -->

		<!-- Types de sélections -->

		<!-- Types de sélection pour les scénarios normaux -->

			<!-- si "true", la sélection n'est composée que de parcelles situées dans 
				les zones U et AU -->
			<param key="JustZoning" value="false" />
			<!-- Sélectionne les parcelles situées dans les zones U sur des terrains 
				déjà construits -->
			<param key="Ubuilt" value="true" />
			<!-- Sélectionne les parcelles situées dans les zones U sur des terrains 
				non-construits -->
			<param key="UnotBuilt" value="true" />
			<!-- Types de sélections situées dans les zones AU -->
			<param key="AU" value="false" />
			<!-- Types de sélections situées dans les zones A et N -->
			<param key="NC" value="false" />

			<!-- Autre types de sélection pour les modes 'fill' -->
			<!-- Sélection de toutes les parcelles ordonnée selon l'évaluation des cellules 
				de MUP-City les intersectant -->
			<param key="JustEval" value="false" />
			<!-- Sélection aléatoire (sans Mup-City) -->
			<param key="Anarchie" value="false" />

		<!-- Décomposition des parcelles -->
		<!-- Si "true", les parcelles U sont décomposées, les parcelles AU sont 
			toutes fondues puis décomposés -->
		<!-- Si "AU", les parcelles situées dans les zones AU sont décomposées -->
		<!-- Si "false", aucune parcelle ne sera décomposé -->
		<param key="splitParcel" value="AU" />
			<!-- Aire moyenne des parcelles découpées -->
			<param key="maximalAreaSplitParcel" value="700" />
			<!-- Largeur minimum de la limite parcellaire donnant sur la voirie -->
			<!-- Si aucune voirie adjacente à la parcelle, le découpage sera orienté 
				aléatoirement -->
			<param key="maximalWidthSplitParcel" value="20" />

	<!-- PARAMETRES DE SIMPLU3D -->

		<!-- prise en compte des prescriptions graphiques -->
			
			<param key="ESPACE_BOISE" value="true" />
			<param key="NUISANCES_RISQUES" value="true"/>
			<!-- quel niveau de nuisance/risque retirons nous de l'urbanisation? -->
				<!-- uniquement les zones les plus graves (dont le libelle contient les mots-clefs suivants : grave, fort, Maximal, rouge -->
			<param key="NUISANCES_RISQUES-MAX" value="true"/>
			<param key="EMPLACEMENT_RESERVE" value="true"/>
			<param key="ELEMENT_PAYSAGE" value="true"/>
			<param key="RECOIL" value="false"/>
			<param key="TVB" value="false"/>
		<!--Fichier utilisé contenant les différentes répartitions. Ces fichiers sont présents dans les ressources dans le dossier "resources/distributionHousingUnit" -->
		<!--Il convient de mettre un "-" entre différents éléments devant caractériser cette zone (pour l'instant, la typologie de la commune et le type de zone du PLU) -->
		<!--Il convient de mettre un "_" entre différentes zones -->		
		<!--Il convient de mettre un ":" pour préciser un scénario à utiliser -->
<param key="useRepartition" value="etal:rural-AU_periUrbain" />

	<!--PARAMETRE DU MODULE BÂTIMENT À MÉNAGE (BUILDING TO HOUSEHOLD) -->

		<!-- Taille moyenne d'un logement -->
		<param key="HousingUnitSize" value="70" />
		<!-- Taille moyenne d'un étage -->
		<param key="heightStair" value="3" />
		<!-- Taille moyenne d'une place de parking --> 
		<param key="surfPlaceParking" value="25" />
		<!-- Largeur des accessibilitées des parcelles aux routes -->
		<param key="largeurRouteAccess" value = "4" />
	
	<!-- Mode de fonctionnement d'ArtiScales -->
	<!-- Si true, le modèle s'arrête quand les objectifs de création de logement 
		du SCoT sont atteind -->
	<!-- Si false, le modèle urbanise toutes les parcelles sans tenir compte 
		du nombre de logements construits -->
	<param key="fill" value="false" />

</parameters>

